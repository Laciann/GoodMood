extends layout

block content
  .inner
    h2= title
    script.
      var daddr = window.location.search.slice(1);
      if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(function(data){
      if (data.coords) {
      url = 'https://maps.google.fr/maps?saddr=' + data.coords.latitude + ',' + data.coords.longitude + '&daddr=' + daddr;
      window.open(url, '_blank');
      }
      });
      }

    